<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script>

@{
    List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem
    {
        Text = "Casual Leave",
        Value = "Casual"
    });
    listItems.Add(new SelectListItem
    {
        Text = "Sick Leave",
        Value = "Sick",
    });
    listItems.Add(new SelectListItem
